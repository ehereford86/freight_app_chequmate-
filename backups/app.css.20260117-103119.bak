:root{
  --bg:#0b0f17;
  --card:#111827;
  --muted:#9ca3af;
  --text:#e5e7eb;
  --line:#1f2937;
  --good:#22c55e;
  --warn:#f59e0b;
  --bad:#ef4444;
  --btn:#2563eb;
  --btn2:#374151;
}

*{box-sizing:border-box}
body{
  margin:0;
  font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial;
  background: radial-gradient(1200px 600px at 15% 15%, #0f172a 0%, var(--bg) 55%);
  color: var(--text);
}

.container{
  max-width: 1100px;
  margin: 0 auto;
  padding: 24px;
}

.topbar{
  display:flex;
  gap:12px;
  align-items:center;
  justify-content:space-between;
  padding:14px 16px;
  border:1px solid var(--line);
  border-radius:14px;
  background: rgba(17,24,39,.72);
  backdrop-filter: blur(10px);
  position: sticky;
  top: 10px;
  z-index: 5;
}

.brand{display:flex; gap:10px; align-items:center}
.logo{
  width:34px; height:34px; border-radius:12px;
  background: linear-gradient(135deg, #2563eb, #7c3aed);
  box-shadow: 0 10px 40px rgba(37,99,235,.25);
}
.brand h1{font-size:16px; margin:0}
.muted{color:var(--muted); margin:0; font-size:12px}

.pill{
  font-size:12px;
  padding:6px 10px;
  border-radius:999px;
  border:1px solid var(--line);
  background: rgba(0,0,0,.25);
}

.grid{
  display:grid;
  grid-template-columns: 1fr 1fr;
  gap:16px;
  margin-top:16px;
}
@media (max-width: 900px){
  .grid{grid-template-columns:1fr;}
}

.card{
  margin-top:16px;
  border:1px solid var(--line);
  border-radius:16px;
  background: rgba(17,24,39,.72);
  backdrop-filter: blur(10px);
  padding:16px;
  box-shadow: 0 10px 40px rgba(0,0,0,.25);
}

h2{margin:0 0 10px 0; font-size:16px}
h3{margin:16px 0 8px 0; font-size:14px}

label{display:block; font-size:12px; color:var(--muted); margin:10px 0 6px}
input, select{
  width:100%;
  padding:10px 12px;
  border-radius:12px;
  border:1px solid var(--line);
  background: rgba(0,0,0,.20);
  color: var(--text);
  outline: none;
}
input:focus, select:focus{border-color: rgba(37,99,235,.7)}

.row{
  display:grid;
  grid-template-columns: 1fr 1fr;
  gap:16px;
}
@media (max-width: 700px){
  .row{grid-template-columns:1fr;}
}

.btn{
  margin-top:12px;
  padding:10px 14px;
  border-radius:12px;
  border:1px solid rgba(255,255,255,.08);
  background: var(--btn);
  color:#fff;
  font-weight:600;
  cursor:pointer;
}
.btn:hover{filter:brightness(1.05)}
.btn2{background: var(--btn2);}

.msg{
  margin-top:10px;
  font-size:12px;
  color: var(--muted);
  min-height: 16px;
}

.output{
  margin:0;
  padding:12px;
  border-radius:14px;
  border:1px solid var(--line);
  background: rgba(0,0,0,.25);
  overflow:auto;
  max-height: 320px;
}
